<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8"/>
	</startup>
	<appSettings>
		<!-- 檔案路徑 -->
		<add key="TXT_FILE_DIR" value="./input" />
		<add key="PDF_FILE_DIR" value="./output" />
		<add key="PDF_FILE_NAME" value="File.pdf" />
		<!-- PDF 格式 -->
		<add key="PAGE_BORDER_X" value="10" />
		<add key="PAGE_BORDER_Y" value="10" />
		<add key="FONT_FAMILY" value="Arial" />
		<add key="FONT_SIZE" value="12" />
	</appSettings>
	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<dependentAssembly>
				<assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral"/>
				<bindingRedirect oldVersion="0.0.0.0-13.0.0.0" newVersion="13.0.0.0"/>
			</dependentAssembly>
		</assemblyBinding>
	</runtime>
</configuration>
